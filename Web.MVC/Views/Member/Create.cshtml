@model Web.MVC.Services.MemberRepo.VmMember
@{
    ViewData["Title"] = "Create Member";
}
@if (TempData["isSucceed"] != null)
{
    <div class="alert alert-success">@TempData["isSucceed"]</div>
}
else if (TempData["isFailed"] != null)
{
    <div class="alert alert-danger">@TempData["isFailed"]</div>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Add Member</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Member">Member</a></li>
                    <li class="breadcrumb-item active">Add</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Hostel</label>
                                    <select asp-for="HostelId" class="form-control">
                                        <option value="">Select Hostel</option>
                                        @foreach (var hostel in ViewBag.Hostels)
                                        {
                                            <option value="@hostel.Id">@hostel.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Room</label>
                                    <select asp-for="RoomId" class="form-control">
                                        <option value="">Select Room</option>
                                        @foreach (var room in ViewBag.Rooms)
                                        {
                                            <option value="@room.Id">@room.RoomNumber</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Member Name</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="Name">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="Gender">Gender</label>
                                    <input type="text" id="Gender" class="form-control" asp-for="Gender">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="DateOfBirth">Date Of Birth</label>
                                    <input type="text" id="DateOfBirth" class="form-control datepicker" asp-for="DateOfBirth">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="Address">Address</label>
                                    <input type="text" id="Address" class="form-control" asp-for="Address">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="Phone">Phone Number</label>
                                    <input type="text" id="Phone" class="form-control" asp-for="Phone">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="Email"> Email</label>
                                    <input type="text" id="Email" class="form-control" asp-for="Email">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="OrganizationName">Organization Name</label>
                                    <input type="text" id="OrganizationName" class="form-control" asp-for="OrganizationName">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="OrganizationMembershipId">Organization Membership Id</label>
                                    <input type="text" id="OrganizationMembershipId" class="form-control" asp-for="OrganizationMembershipId"></input>
                                </div>
                            </div>
                            <div class="col-12">
                                <a href="/Member/Create" class="btn btn-outline-primary">Reset</a>
                                <input type="submit" value="Add" class="btn btn-primary float-right">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<script>
    // Function to hide the success and error alerts after 2 seconds
    function hideAlerts() {
        var successAlert = document.getElementById("successAlert");
        var errorAlert = document.getElementById("errorAlert");

        if (successAlert) {
            successAlert.style.display = "none";
        }

        if (errorAlert) {
            errorAlert.style.display = "none";
        }
    }

    // Call the hideAlerts function after 2 seconds (2000 milliseconds)
    setTimeout(hideAlerts, 2000);
</script>

@model IEnumerable<Web.MVC.Services.MemberRepo.VmMember>
@{
    ViewData["Title"] = "Member List";
}

@if (TempData["isSucceed"] != null)
{
    <div class="alert alert-success" id="successAlert">@TempData["isSucceed"]</div>
}
else if (TempData["isFailed"] != null)
{
    <div class="alert alert-danger" id="errorAlert">@TempData["isFailed"]</div>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Members</h1>
            </div><!-- /.col -->
            <div class="col-sm-6 text-right">
                <a class="btn bg-blue" href="/Member/Create/">
                    <i class="fa fa-plus-square"></i>
                    Add new
                </a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h3 class="card-Text">Existing Members</h3>
            </div>

            <div class="card-body">
                <table class="dataTable table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Hostel Name</th>
                            <th>Organization Membership Id</th>
                            <th>Room Number</th>
                            <th>Gender</th>
                            <th>Date of Birth</th>
                            <th>Address</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>Organization Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Model)
                        {
                            <tr>
                                <td>@member.Name</td>
                                <td>@member.HostelName</td>
                                <td>@member.OrganizationMembershipId</td>
                                <td>@member.RoomNumber</td>
                                <td>@member.Gender</td>
                                <td>@member.DateOfBirth</td>
                                <td>@member.Address</td>
                                <td>@member.Phone</td>
                                <td>@member.Email</td>
                                <td>@member.OrganizationName</td>
                                <td class="action-buttons-td">
                                    <a class="btn btn-info" href="/Member/Update/@member.Id"><i class="far fa-edit"></i></a>
                                    <a class="btn btn-danger" href="/Member/Delete/@member.Id"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
<script>
    // Function to hide the success and error alerts after 2 seconds
    function hideAlerts() {
        var successAlert = document.getElementById("successAlert");
        var errorAlert = document.getElementById("errorAlert");

        if (successAlert) {
            successAlert.style.display = "none";
        }

        if (errorAlert) {
            errorAlert.style.display = "none";
        }
    }

    // Call the hideAlerts function after 2 seconds (2000 milliseconds)
    setTimeout(hideAlerts, 2000);
</script>
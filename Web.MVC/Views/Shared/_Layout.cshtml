<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | HMS</title>
    <base href="~/adminlte/" />

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->

    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="plugins/select2/css/select2.min.css">
    <!--Boostrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="sidebar-mini layout-fixed layout-navbar-fixed sidebar-mini-md sidebar-mini-xs text-sm">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-lightblue dropdown-legacy border-bottom-0 text-sm">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Logout">
                        <i class="fas fa-sign-out-alt"></i> Sign Out
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar elevation-4 sidebar-light-lightblue">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="dist/img/user2-160x160.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">HMS</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar os-host os-theme-light os-host-resize-disabled os-host-transition os-host-overflow os-host-overflow-y os-host-scrollbar-horizontal-hidden">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="javascript:void(0)" class="d-block" id="view-username">Admin</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column nav-child-indent" id="sidebar-menu" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Hostel/index" class="nav-link">
                                <i class="nav-icon fas fa-hotel"></i>
                                <p>
                                    Hostel
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Staff/index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Staff
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/RoomType/index" class="nav-link">
                                <i class="nav-icon fas fa-layer-group"></i>
                                <p>
                                    Room Type
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Room/index" class="nav-link">
                                <i class="nav-icon fas fa-door-open"></i>
                                <p>
                                    Room
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Member/index" class="nav-link">
                                <i class="nav-icon fas fa-user-circle"></i>
                                <p>
                                    Member
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/RentCollection/index" class="nav-link">
                                <i class="nav-icon fas fa-money-bill"></i>
                                <p>
                                    Rent Collection
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Loader -->
        <div id="loader-main" style="display:none">
            <div id="loader">
            </div>
        </div>
        <!-- /.Loader -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer text-sm text-center">
            <strong>Made by Rakibul Islam</strong>
            
            
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="plugins/jquery/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <!-- Custom -->
    <script src="~/js/site.js"></script>
    <!-- Bootstrap 4 -->
    <script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- Select2 -->
    <script src="plugins/select2/js/select2.min.js"></script>
    <!-- AdminLTE App -->
    <script src="dist/js/adminlte.js"></script>
    <!-- Add bootstrap-datepicker JavaScript -->
    <script src="plugins/datepicker/js/bootstrap-datepicker.min.js"></script>
    <!-- Add bootstrap-timepicker JavaScript -->
    <script src="plugins/timepicker/js/bootstrap-timepicker.min.js"></script>
    <script>
        $(function () {
            $('.dataTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "autoWidth": true
            });
        });
        // Replace 'datepicker' with the class or ID of your input element
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd', // Specify your desired date format
                autoclose: true
            });
        });
        // Replace 'timepicker' with the class or ID of your input element
        $(document).ready(function () {
            $('.timepicker').timepicker({
                timeFormat: 'HH:mm',
                showMeridian: true, // Set to true if you want to display AM/PM
                minuteStep: 1 // Set the interval between minutes (e.g., 15, 30, 60)
            });
        });
    </script>
    <script>
        //Date picker
        $('#reservationdate').datetimepicker({
            format: 'L'
        });
    </script>
</body>
</html>

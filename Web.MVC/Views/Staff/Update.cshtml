@model Web.MVC.Services.StaffRepo.VmStaff
@{
    ViewData["Title"] = "Update Staff";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Update Staff</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Staff">Staff</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Update</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Update">
                        <div class="row">
                            <input type="hidden" asp-for="Id" readonly>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Hostel</label>
                                    <select asp-for="HostelId" class="form-control">
                                        <option value="">Select Hostel</option>
                                        @foreach (var hostel in ViewBag.Hostels)
                                        {
@*                                            <option value="@hostel.Id" selected>@hostel.Name</option>
*@                                             <option value="@hostel.Id" selected=@(hostel.Id == Model.HostelId? true : false)>@hostel.Name</option>
                                        }

                                    </select>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="inputName">Name</label>
                                    <input type="text" id="inputName" class="form-control" asp-for="Name">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="Gender">Gender</label>
                                    <input type="text" id="Gender" class="form-control" asp-for="Gender">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="DateOfBirth">DateOfBirth</label>
                                    <input type="text" id="DateOfBirth" class="form-control datepicker" asp-for="DateOfBirth">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="Phone">Phone</label>
                                    <input type="text" id="Phone" class="form-control" asp-for="Phone">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input type="text" id="Email" class="form-control" asp-for="Email">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label for="Position">Position</label>
                                    <input type="text" id="Position" class="form-control" asp-for="Position"></input>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="Salary">Salary</label>
                                    <input type="number" id="Salary" class="form-control" asp-for="Salary"></input>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label for="inputAddress">Address</label>
                                    <textarea id="inputAddress" class="form-control" rows="2" asp-for="Address"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <a href="/Staff" class="btn btn-outline-primary">Back</a>
                                <input type="submit" value="Update" class="btn btn-primary float-right">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
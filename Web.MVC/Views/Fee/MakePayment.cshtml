@model Web.MVC.Services.FeeRepo.VmMakePayment
@{
    ViewData["Title"] = "Make Payment";
}
@if (TempData["isSucceed"] != null)
{
    <div class="alert alert-success">@TempData["isSucceed"]</div>
}
else if (TempData["isFailed"] != null)
{
    <div class="alert alert-danger">@TempData["isFailed"]</div>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Make Payment</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Make Payment</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="MakePayment">
                        <div class="row">
                            <input type="hidden" asp-for="Id" readonly>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="PayAmount">Payment Amount</label>
                                    <input type="number" id="PayAmount" class="form-control" asp-for="PayAmount" placeholder="Enter amount to pay"></input>
                                </div>
                            </div>
                            <div class="col-12">
                                <a href="/RentCollection" class="btn btn-outline-primary">Back</a>
                                <input type="submit" value="Click Here Confirm" class="btn btn-primary float-right">
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</section>
<script>
    // Function to hide the success and error alerts after 2 seconds
    function hideAlerts() {
        var successAlert = document.getElementById("successAlert");
        var errorAlert = document.getElementById("errorAlert");

        if (successAlert) {
            successAlert.style.display = "none";
        }

        if (errorAlert) {
            errorAlert.style.display = "none";
        }
    }

    // Call the hideAlerts function after 2 seconds (2000 milliseconds)
    setTimeout(hideAlerts, 2000);
</script>
